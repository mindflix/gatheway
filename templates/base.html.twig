<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="author" content="Demol Nicolas">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>{% block title %}Gatheway{% endblock %}</title>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            <script type="module" src="https://unpkg.com/ionicons@5.4.0/dist/ionicons/ionicons.esm.js"></script>
            <script nomodule="" src="https://unpkg.com/ionicons@5.4.0/dist/ionicons/ionicons.js"></script>
        {% endblock %}
    </head>
    <body>
        <nav class="nav">
            <div class="nav--container">
                <ul id="menu-btn" class="nav--left">
                <li><ion-icon name="menu-outline"></ion-icon><p>MENU</p></li>
                </ul>
                <div class="nav--logo">
                <h1>Gatheway</h1>
                </div>
                <ul class="nav--right">
                <li><ion-icon name="search-outline"></ion-icon></li>
                <li><ion-icon name="person-outline"></ion-icon></li>
                <li><ion-icon name="pricetags-outline"></ion-icon></li>
                </ul>
            </div>
            <div class="nav--links">
                <li><span>Home</span></li>
                <li><span>Wardrobe</span></li>
                <li><span>News</span></li>
                <li><span>Team</span></li>
                <li><span>Contact</span></li>
            </div>
        </nav>
        <div id="menu-sidebar">
        </div>
        {% block body %}
        {% endblock %}
    </body>
</html>